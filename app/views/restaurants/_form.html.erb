
<%= form_for(@restaurant, :HTML => {multipart: true}) do |f| %>
  <% if @restaurant.errors.any? %>
    <div class="container-fliud">
      <div id="error_explanation" class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

        <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Company Name" %>
  </div>
  <div class="form-group">
    <%= f.label :address  %><br>
    <%= f.text_field :address, class: "form-control", placeholder: "100 some st., Miami, FL, 33001" %>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control", placeholder: "(888) 888-8888" %>
  </div>
  <div class="form-group">
    <%= f.label :website %><br>
    <%= f.text_field :website, class: "form-control", placeholder: "http://www.yourwebsite.com" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
    <label>
      <%= f.check_box :remove_image %>
      Remove Image
    </label>
  </div>
  
  <div class="form-group actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
